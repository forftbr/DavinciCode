                <TextBlock.Effect>
                    <DropShadowEffect ShadowDepth="2"></DropShadowEffect>
                </TextBlock.Effect>
            </TextBlock>
            <TextBlock FontFamily="Microsoft YaHei" FontSize="30" Foreground="White" Height="39" HorizontalAlignment="Left" Margin="470,149,0,0" Name="textBlock2" Text="You Lose" VerticalAlignment="Top" Width="132" >
                <TextBlock.Effect>
                    <DropShadowEffect ShadowDepth="2"></DropShadowEffect>
                </TextBlock.Effect>
            </TextBlock>
        </Grid>
    </Viewbox>
</UserControl>
